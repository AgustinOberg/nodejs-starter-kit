{
  "name": "nodejs-starter",
  "version": "1.6.0",
  "description": "This is a starter project for NodeJS with Express and MongoDB using Serverless Framework",
  "main": "app.js",
  "scripts": {
    "coverage": "nyc --reporter=text pnpm run test",
    "deploy:development": "NODE_ENV=development pnpm run internal-deploy",
    "deploy:production": "NODE_ENV=production pnpm run internal-deploy",
    "dev": "NODE_ENV=development nodemon --exec babel-node ./app.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "internal-babel-transpile": "rm -rf temp && babel . -d temp --ignore node_modules,test,dist,.serverless --copy-files --no-copy-ignored",
    "internal-build": "pnpm run internal-babel-transpile && pnpm run internal-copy-modules && pnpm run internal-compile && pnpm run internal-merge-env && rm -rf temp",
    "internal-compile" : "esbuild temp/app.js --bundle --platform=node --outfile=dist/bundle.js",
    "internal-copy-modules": "rm -rf temp/node_modules && rm -rf temp/migrations && cd temp && pnpm install --only=prod && rm -rf .git && cd ..",
    "internal-deploy": "pnpm run internal-build && cp serverless.yml dist/serverless.yml && cd dist && serverless deploy --stage=$NODE_ENV",
    "internal-merge-env": "cp .env.$NODE_ENV dist/.env.$NODE_ENV",
    "internal-remove": "serverless remove --stage=$NODE_ENV",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "remove:development": "NODE_ENV=development pnpm run internal-remove",
    "remove:production": "NODE_ENV=production pnpm run internal-remove",
    "start": "babel-node app.js",
    "test": "env-cmd -f ./.env.test mocha --timeout 60000 --recursive --require @babel/register --exit"
  },
  "keywords": [
    "nodejs",
    "express",
    "serverless",
    "mongodb",
    "mongoose",
    "aws",
    "lambda",
    "api",
    "rest",
    "starter"
  ],
  "author": "AgustinOberg",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/node": "^7.22.6",
    "@babel/plugin-transform-runtime": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "babel-plugin-module-resolver": "^5.0.0",
    "chai": "^4.3.7",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.28.1",
    "faker": "^5.5.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "serverless": "^3.35.2",
    "serverless-dotenv-plugin": "^6.0.0"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.22.6",
    "axios": "^1.5.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-oas-generator": "^1.0.46",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.3.0",
    "mongoose": "^7.5.3",
    "pluralize": "^8.0.0",
    "serverless-http": "^3.2.0"
  }
}
