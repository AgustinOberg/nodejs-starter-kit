{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": ["import"],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "import/no-unresolved": "error",
    "import/order": ["error", { "alphabetize": { "order": "asc" } }]
  }
}
